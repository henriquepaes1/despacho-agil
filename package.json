{
	"name": "despacho-agil-server",
	"version": "1.0.0",
	"type": "module",
	"description": "WebSocket server for color updates from hardware to clients",
	"engines": {
		"node": ">=18.11"
	},
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "esbuild src/index.ts --bundle --minify --outdir=dist --packages=external --platform=node --format=esm --external:ws --external:express",
		"start": "node dist/index.js"
	},
	"dependencies": {
		"express": "^4.18.2",
		"ws": "^8.13.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^18.15.11",
		"@types/ws": "^8.5.4",
		"esbuild": "^0.17.16",
		"tsx": "^4.7.0"
	}
}
